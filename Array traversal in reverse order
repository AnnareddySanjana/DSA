#include<iostream>
using namespace std;
int main(){
cout<<"Enter the size of the array"<<endl;
int size;
int elements[100];
cin>>size;
cout<<"enter the elements of array"<<endl;
for(int i=0;i<size;i++){
cin>>elements[i];
}
cout<<"The created array is: "<<endl;
for(int i=0;i<size;i++){
cout<<elements[i]<<" ";
}
cout<<"The reversed array is: "<<endl;
for(int i=size-1;i>=0;i--){
cout<<elements[i]<<" ";
}
}
